<Window x:Class="Calculator.App.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia obliczeń" Height="520" Width="620"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox x:Name="TxtFilter" Width="240" Margin="0,0,8,0"
                     TextChanged="TxtFilter_TextChanged"/>
        </StackPanel>

        <DataGrid x:Name="GridHistory"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Data (lokalna)" Binding="{Binding CreatedLocal}" Width="150"/>
                <DataGridTextColumn Header="Wyrażenie" Binding="{Binding Expression}" Width="*"/>
                <DataGridTextColumn Header="Wynik" Binding="{Binding Result}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
