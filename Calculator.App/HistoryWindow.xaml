<Window x:Class="Calculator.App.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia obliczeń"
        Height="560" Width="760"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8FAFC">

    <Window.Resources>
        <SolidColorBrush x:Key="BorderBrushLight" Color="#E5E7EB"/>
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF1F5F9"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FFE5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TxtFilter" Width="280" Style="{StaticResource SearchBox}"
                         ToolTip="Szukaj po dacie (yyyy-MM-dd / yyyy-MM), wyrażeniu lub wyniku"
                         TextChanged="TxtFilter_TextChanged"/>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1" CornerRadius="10" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="1" Background="White">
            <DataGrid x:Name="GridHistory"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Data (lokalna)" Binding="{Binding CreatedLocal}" Width="160"/>
                    <DataGridTextColumn Header="Wyrażenie" Binding="{Binding Expression}" Width="*"/>
                    <DataGridTextColumn Header="Wynik" Binding="{Binding Result}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
