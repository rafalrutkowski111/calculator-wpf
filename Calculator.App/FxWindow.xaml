<Window x:Class="Calculator.App.FxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="Waluty"
        Height="420" Width="1032"
        MinWidth="820"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8FAFC">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderBrushLight" Color="#E5E7EB"/>

        <Style x:Key="BaseBtn" TargetType="Button">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FFF1F5F9"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEFF4FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF1F5F9"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FFE5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,4"/>
        </Style>

        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="Picker" TargetType="DatePicker">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
            CornerRadius="10"
            BorderBrush="{StaticResource BorderBrushLight}"
            BorderThickness="1"
            Background="White"
            Padding="10"
            Margin="0,0,0,10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Waluta" Margin="0,6,8,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CmbCur" Width="90" Margin="0,0,12,0">
                        <ComboBoxItem Content="EUR" IsSelected="True"/>
                        <ComboBoxItem Content="USD"/>
                        <ComboBoxItem Content="GBP"/>
                    </ComboBox>

                    <TextBlock Text="Od" Margin="0,6,8,0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DpFrom" SelectedDate="{x:Static sys:DateTime.Today}" Style="{StaticResource Picker}"/>

                    <TextBlock Text="Do" Margin="0,6,8,0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DpTo" SelectedDate="{x:Static sys:DateTime.Today}" Style="{StaticResource Picker}"/>

                    <TextBlock Text="Kwota" Margin="0,6,8,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtAmount" Width="120" Text="100" Margin="0,0,12,0" Style="{StaticResource InputBox}" ToolTip="Kwota w PLN"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <RadioButton x:Name="RbSell" Content="Sprzedaję (MAX)" IsChecked="True" Margin="0,0,8,0"/>
                        <RadioButton x:Name="RbBuy"  Content="Kupuję (MIN)"/>
                    </StackPanel>

                    <Button Content="Policz" Click="Calc_Click" Style="{StaticResource PrimaryBtn}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1">
            <Border CornerRadius="10" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="1" Background="White" Padding="12">
                <TextBlock x:Name="TxtResult" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
            </Border>

            <Border CornerRadius="10" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="1" Background="White" Padding="0" Margin="0,10,0,0">
                <DataGrid x:Name="GridRates" AutoGenerateColumns="False" IsReadOnly="True" Height="240">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data" Binding="{Binding Date}" Width="*" />
                        <DataGridTextColumn Header="Kurs" Binding="{Binding Rate}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</Window>
