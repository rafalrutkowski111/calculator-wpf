<Window x:Class="Calculator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="520" Width="380" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- wiersz 0 -->
    <TextBox x:Name="Display"
             Grid.Row="0"
             FontSize="28"
             IsReadOnly="True"
             Margin="0,0,0,12" />

    <!-- wiersz 1 -->
    <UniformGrid Grid.Row="1" Rows="5" Columns="4">
        <Button Content="7"/>
        <Button Content="8"/>
        <Button Content="9"/>
        <Button Content="/"/>

        <Button Content="4"/>
        <Button Content="5"/>
        <Button Content="6"/>
        <Button Content="*"/>

        <Button Content="1"/>
        <Button Content="2"/>
        <Button Content="3"/>
        <Button Content="-"/>

        <Button Content="0"/>
        <Button Content="."/>
        <Button Content="="/>
        <Button Content="+"/>

        <!-- UWAGA: w UniformGrid ColumnSpan nie działa; zostaw zwykły przycisk -->
        <Button Content="C"/>
    </UniformGrid>
</Grid>

</Window>
