<Window x:Class="Calculator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator"
        Height="560" Width="380"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        Background="#FFF8FAFC">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentBrushHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="DangerBrushHover" Color="#DC2626"/>
        <SolidColorBrush x:Key="KeyBg" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="KeyBgHover" Color="#FFEFF4FF"/>
        <SolidColorBrush x:Key="BorderBrushLight" Color="#E5E7EB"/>

        <Style x:Key="BaseBtn" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="{StaticResource KeyBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource KeyBgHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrushHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerBrushHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopbarBtn" TargetType="Button" BasedOn="{StaticResource BaseBtn}">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FFF1F5F9"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="Historia" Style="{StaticResource TopbarBtn}" Click="History_Click"/>
                <Button Content="Waluty"   Style="{StaticResource TopbarBtn}" Click="Fx_Click"/>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1" CornerRadius="10" BorderThickness="1"
                BorderBrush="{StaticResource BorderBrushLight}" Background="White" Margin="0,0,0,12">
            <TextBox x:Name="Display"
                     FontSize="28"
                     IsReadOnly="True"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     Text="0"
                     HorizontalContentAlignment="Right"/>
        </Border>

        <UniformGrid Grid.Row="2" Rows="5" Columns="4">
            <Button Content="C"  Style="{StaticResource DangerBtn}" Click="Clear_Click"/>
            <Button Content="CE" Style="{StaticResource BaseBtn}"   Click="ClearEntry_Click"/>
            <Button Content="⌫"  Style="{StaticResource BaseBtn}"   Click="Backspace_Click"/>
            <Button Content="/"  Style="{StaticResource BaseBtn}"   Click="Operator_Click"/>

            <Button Content="7"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="8"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="9"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="*"  Style="{StaticResource BaseBtn}" Click="Operator_Click"/>

            <Button Content="4"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="5"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="6"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="-"  Style="{StaticResource BaseBtn}" Click="Operator_Click"/>

            <Button Content="1"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="2"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="3"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="+"  Style="{StaticResource BaseBtn}" Click="Operator_Click"/>

            <Button Content="±"  Style="{StaticResource BaseBtn}" Click="ToggleSign_Click"/>
            <Button Content="0"  Style="{StaticResource BaseBtn}" Click="Digit_Click"/>
            <Button Content="."  Style="{StaticResource BaseBtn}" Click="Dot_Click"/>
            <Button Content="="  Style="{StaticResource PrimaryBtn}" Click="Equals_Click"/>
        </UniformGrid>
    </Grid>
</Window>
